    <script>
      let captchaVerified = false;

      function onCaptchaSuccess() {
        captchaVerified = true;
        document.getElementById("submit-btn").disabled = false;
      }

      function generateSecureKey(length = 12) {
        const chars =
          "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*";
        let result = "";
        for (let i = 0; i < length; i++) {
          result += chars.charAt(Math.floor(Math.random() * chars.length));
        }
        return result;
      }

      function handleSubmit(event) {
        event.preventDefault();

        const selected = document.querySelector('input[name="answer"]:checked');
        const errorMsg = document.getElementById("error-msg");

        if (!selected) {
          errorMsg.textContent = "Please choose an answer.";
          return false;
        }

        if (!captchaVerified) {
          errorMsg.textContent = "Please complete the CAPTCHA.";
          return false;
        }

        if (selected.value === "mj") {
          const key = generateSecureKey();
          const encodedKey = encodeURIComponent(key);
          window.location.href = "UsingThisUrlOneTimePleaseDontSnipe.html";
        } else {
          errorMsg.textContent = "no retard ahahhahaah";
        }

        return false;
      }
    </script>
